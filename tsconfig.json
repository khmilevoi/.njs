{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "rootDirs": [
      "src/",
      "tests/",
    ],
    "allowJs": true,
    "baseUrl": "src",
    "target": "es2017"
  },
  "exclude": [
    "node_modules"
  ]
}
